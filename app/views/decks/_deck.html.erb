<div id="<%= dom_id deck %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= deck.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= deck.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this deck", deck, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this deck', edit_deck_path(deck), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
