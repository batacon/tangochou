<div class="w-full p-8 bg-gray-50">

  <% if notice.present? %>
    <div class="mb-5 bg-green-100 border-l-4 border-green-500 text-green-700 p-4 rounded-md shadow-md" id="notice">
      <p class="font-medium"><%= notice %></p>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl text-gray-800">単語帳一覧</h1>
    <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "rounded-lg py-2 px-4 bg-red-500 hover:bg-red-600 text-white font-medium" %>
  </div>

  <div id="decks" class="bg-white p-6 rounded-lg shadow-md mb-8">
    <%= render @decks %>
  </div>

  <div>
    <%= link_to '新しい単語帳を追加する', new_deck_path, class: "inline-block rounded-lg py-3 px-5 bg-blue-600 hover:bg-blue-700 text-white font-medium shadow-md" %>
  </div>
</div>
