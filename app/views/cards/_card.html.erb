<div id="<%= dom_id card %>" class="p-4 bg-white rounded-lg shadow-md border border-gray-200" style="background-image: url('付箋や文房具の背景画像のURL'); background-size: cover; background-repeat: no-repeat;">

  <div class="flex flex-col space-y-4">

    <div class="flex flex-col space-y-2">
      <strong class="text-lg text-gray-800">表面</strong>
      <div class="p-3 rounded bg-yellow-100 border border-yellow-300 shadow-inner">
        <%= card.front_text %>
      </div>
    </div>

    <div class="flex flex-col space-y-2">
      <strong class="text-lg text-gray-800">裏面</strong>
      <div class="p-3 rounded bg-green-100 border border-green-300 shadow-inner">
        <%= card.back_text %>
      </div>
    </div>

    <% if action_name != "show" %>
      <div class="mt-4">
        <%= link_to '編集', edit_deck_card_path(card.deck, card), class: "rounded-lg py-2 px-5 text-white bg-blue-500 inline-block font-medium hover:bg-blue-600 transition ease-in-out duration-150" %>
      </div>
    <% end %>
  </div>
</div>
